{{> layouts/main}}

{{#section 'body'}}
  <h2>Welcome to Your Dashboard, {{username}}!</h2>

  {{#if posts.length}}
    <h3>Your Blog Posts</h3>
    {{#each posts}}
      {{> partials/post}}
    {{/each}}
  {{else}}
    <p>You haven't created any blog posts yet. <a href="/create">Create one now!</a></p>
  {{/if}}
{{/section}}

